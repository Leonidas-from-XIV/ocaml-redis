(jbuild_version 1)

(library
 ((name redis_test)
  (modules test)
  (libraries (redis oUnit))))

(executables
 ((libraries (redis_test redis_sync redis_lwt redis_async))
  (names (test_sync test_lwt test_async))))

(alias
 ((name   runtest)
  (deps   (test_lwt.exe))
  (action (run ${<}))))

(alias
 ((name   runtest)
  (deps   (test_async.exe))
  (action (run ${<}))))

(alias
 ((name   runtest)
  (deps   (test_sync.exe))
  (action (run ${<}))))